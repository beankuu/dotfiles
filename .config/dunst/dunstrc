[global]
    monitor = 0
    follow = keyboard
    geometry = "300x185-5+40"
    indicate_hidden = yes
    transparency = 50
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    frame_width = 0
    frame_color = "#222222"
    separator_color = auto
    sort = yes
    idle_threshold = 0
    font = Monospace 16

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed

    format = "<b>%a</b>\n%s\n%b"
    line_height = 0
    alignment = left
    show_age_threshold = 30
    word_wrap = yes
    ignore_newline = no
    max_icon_size = 0
    sticky_history = yes
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    startup_notification = true

[urgency_low]
    background = "#3F51B5"
    foreground = "#EEEEEE"
    timeout = 10

[urgency_normal]
    background = "#FF9800"
    foreground = "#EEEEEE"
    timeout = 10

[urgency_critical]
    background = "#F44336"
    foreground = "#EEEEEE"
    timeout = 30

# ----------
# Global Application settings
# ----------

[ignore]
    summary = "startup"
    format = ""

[signed_on]
    summary = "*signed on*"
    urgency = low

[signed_off]
    summary = *signed off*
    urgency = low

[says]
    summary = *says*
    urgency = critical
    format  = "%s "%b""

