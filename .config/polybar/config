[color]

  trans		= #00000000
  white		= #FFFFFF
  black		= #000000

  background 	= ${xrdb:background:222222}
  background-alt= #444444
  foreground 	= ${xrdb:foreground:666666}
  foreground-alt= #CCCCCC
  
  acolor	= #546e7a
  curgent 	= #e53935
  coccupied 	= #1e88e5

  ## Material Colors

  red 		= #e53935
  pink 		= #d81b60
  purple	= #8e24aa
