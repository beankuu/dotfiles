[module/battery]
  type      = internal/battery
  ;battery   = BAT0
  ;adapter   = ADP1
  full-at = 99

  format-charging       = <animation-charging> <label-charging>
  format-discharging    = <ramp-capacity> <label-discharging>
  format-full           = <label-full>

  label-charging = %percentage:3%%
  animation-charging-0 = ÔâÑ
  animation-charging-1 = ÔâÉ
  animation-charging-2 = ÔâÇ
  animation-charging-3 = ÔâÅ
  animation-charging-4 = ÔâÄ
  ; Framerate in milliseconds
  animation-charging-framerate = 1000

  label-discharging = %percentage:3%%
  ramp-capacity-0 = ÔâÑ
  ramp-capacity-1 = ÔâÉ
  ramp-capacity-2 = ÔâÇ
  ramp-capacity-3 = ÔâÅ
  ramp-capacity-4 = ÔâÄ

  label-full = Ôá¶

[module/network]
  type      = internal/network
  interface = wlp0s20f3

  format-connected              = <ramp-signal> <label-connected>
  ;label-connected               = %essid%
  label-connected               = %downspeed:5%
  label-connected-foreground    = #eefafafa

  format-disconnected           = <label-disconnected>
  label-disconnected            = not connected
  label-disconnected-foreground = #66ffffff

  format-packetloss             = <animation-packetloss> <label-connected>
  label-packetloss              = %essid%
  label-packetloss-foreground   = #eefafafa

  ramp-signal-0 = Ôá´
  ramp-signal-1 = Ôá´
  ramp-signal-2 = Ôá´
  ramp-signal-3 = Ôá´
  ramp-signal-4 = Ôá´  

  animation-packetloss-0 = ‚ö†
  animation-packetloss-0-foreground = #ffa64c
  animation-packetloss-1 = üì∂
  animation-packetloss-1-foreground = #000000
  animation-packetloss-framerate = 500

;deprecated  
[module/serverstatus]
  type = custom/script
  exec = $HOME/.config/polybar/servercheck.sh
  interval = 90

  format-foreground = #CC6600
  format-background = #272827


[module/date]
  type = internal/date
  interval = 1.0
  
  date      = %H:%M:%S
  date-alt  = %Y-%m-%d%
  label     = %date:10%

#-----------------------------------------------------------------------------#
#                           2.Side panel config                               #
#-----------------------------------------------------------------------------#
[bar/powerbar]
  enable-ipc = true
  override-redirect = true
  bottom = false

  height = 32
  width = 340
  offset-y = 32
  offset-x = 0
  fixed-center = true
  spacing = 0
  module-margin-left = 2
  module-margin-right = 2

  border-size = 0
  #border-color = ${colors.primary}

  background = ${color.background}
  foreground = ${color.foreground}

  font-0 = "Font Awesome 5 Free:style=Solid:pixelsize=16;"
  font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=16;"
  font-2 = "Font Awesome 5 Brands:pixelsize=16;"

  modules-center = lock exit hibernate reboot shutdown 

[bar/timebar]
  enable-ipc = true
  override-redirect = true
  bottom = false
  
  height = 40
  width = 10%
  offset-y = 40

