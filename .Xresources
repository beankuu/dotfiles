! 2. URxvt
!  URxvt.font: xft:NeoDunggeunmo:size=16,xft:NanumGothicCoding-Bold:size=14,xft:Source Code Pro Semibold:size=14
  URxvt.font: xft:NanumGothicCoding-ExtraBold:size=14,xft:Source Code Pro Semibold:size=14

  URxvt.Depth:                    32
  URxvt*scrollBar:                false
  URxvt*mouseWheelScrollPage:     false
  URxvt*cursorBlink:               true
  URxvt*saveLines:                 5000
  URxvt*internalBorder: 5
  URxvt.inputMethod: ibus
  URxvt.preeditType: OverTheSpot
  
  URxvt*iso14775:False
  URxvt.perl-ext-common: clipboard,font-size
  URxvt.keysym.Shift-Control-C: perl:clipboard:copy
  URxvt.keysym.Shift-Control-V: perl:clipboard:paste
  URxvt.keysym.Control-Up:     font-size:increase
  URxvt.keysym.Control-Down:   font-size:decrease
