! 1. Global Modifiers
  *background:                    #28262d
  *background-alt:                #302d38
  *foreground:                    #8daac6
  *foreground-alt:                #93bbdd
  *cursorColor:                   #005555
!! color even {0,2,4,8,10,12,14} : normal colors
!! color odd  {1,3,5,7,9,13,15}  : brigher counterparts
!! black
  *color0:                        #28262d
  *color8:                        #8daac6
!! red
  *color1:                        #3c459e
  *color9:                        #6d7ca8
!! green
  *color2:                        #678dd5
  *color10:                       #90a7d2
!! yellow
  *color3:                        #c57085
  *color11:                       #dca9b5
!! blue
  *color4:                        #d3d3d7
  *color12:                       #cecbcd
!! magenta
  *color5:                        #699158
  *color13:                       #abb087
!! cyan
  *color6:                        #5d3964
  *color14:                       #9d88a2
!! white
  *color7:                        #145ebe
  *color15:                       #729ed8

! 2. Xft
  Xft.hinting: 0
  Xft.antialias: 1

! 3. URxvt
  URxvt.font: \
        xft:NeoDunggeunmo:size=16,\
        xft:NanumGothicCoding-ExtraBold:size=16,\
        xft:Symbola,\
        xft:Hack,\
        xft:Material Design Icons,\
        xft:Weather Icons

  URxvt.letterspace:                1
  URxvt.Depth:                      32
  URxvt*scrollBar:                  false
  URxvt*mouseWheelScrollPage:       false
  URxvt*cursorBlink:                true
  URxvt*saveLines:                  5000
  URxvt*internalBorder:             5
  URxvt.inputMethod:                ibus
  URxvt.preeditType:                OverTheSpot
  
  URxvt*iso14775:False
  URxvt.perl-ext-common: default,clipboard,font-size,matcher
  URxvt.keysym.Shift-Control-C: perl:clipboard:copy
  URxvt.keysym.Shift-Control-V: perl:clipboard:paste
  URxvt.keysym.Control-Up:     font-size:increase
  URxvt.keysym.Control-Down:   font-size:decrease
  URxvt.url-launcher: /usr/bin/xdg-open
  URxvt.matcher.button: 1 
  URxvt.keysym.C-Delete: perl:matcher:last
  URxvt.keysym.M-Delete: perl:matcher:list
  URxvt.matcher.rend.0: Uline Bold fg5

