conky.config = {
  -- Conky Settings --
    background = false,			--default
    update_interval = 1.0,
    cpu_avg_samples = 1,
    net_avg_samples = 2,		--default

  -- Text Settings --
    use_xft = true,
    font = 'NeoDunggeunmo:size=16',
    default_color = '#333333',
    default_outline_color = '#333333', 
    default_shade_color = '#333333',
    override_utf8_locale = true,

  -- Window specifications --
    alignment = 'top_left',
    gap_x = 10,
    gap_y = 10 + 40,			-- 40 for polybar
    minimum_width = 10,	
    minimum_height = 10,		--default
    border_width = 0,
    stippled_borders = 0,		--default
    
    own_window = true,			--default
    own_window_type = 'override',
    -- own_window_colour = '#000000',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_class = 'Conky',
    
    draw_borders = false,		--default
    draw_graph_borders = false,
    draw_outline = false,		--default
    draw_shades = false,		--default
 
-- Graphics settings --
    no_buffers = false,
    double_buffer = true, 
    extra_newline = false,		--default
    use_spacer = 'none',		--default
}

conky.text = [[
${offset 20}${font NeoDunggeunmo:size=16}${color CC3300}MDT, Calgary CA
${offset 20}${font NeoDunggeunmo:size=32}${color 222222}${time %T}
${offset 20}${voffset -20}${font NeoDunggeunmo:size=16}${color CC3300}${time %a, %B %d, %Y}

${voffset -132}
${offset 1720}${font NeoDunggeunmo:size=16}${color CC3300}KST, Seoul KR
${offset 1720}${font NeoDunggeunmo:size=32}${color 222222}${tztime Asia/Seoul %T}
${offset 1720}${voffset -20}${font NeoDunggeunmo:size=16}${color CC3300}${tztime Asia/Seoul %a, %B %d, %Y}
]]
